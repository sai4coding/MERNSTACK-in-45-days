   //evenlistner

   <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div id="container">
        <p class="text">Click the button to change color</p>
        <button id="toggleColorBtn">Toggle Color</button>
    </div>
    
</body>
<script>
    const container = document.getElementById("container");
const toggleButton = document.getElementById("toggleColorBtn");

toggleButton.addEventListener("click", function() {
    if (container.style.backgroundColor === "green") {
        container.style.backgroundColor = "white"; // Change to white if green
    } else {
        container.style.backgroundColor = "green"; // Change to green if not
    }
});

</script>

</html>
